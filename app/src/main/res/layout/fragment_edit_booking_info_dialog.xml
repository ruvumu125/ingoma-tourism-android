<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="#3ea1a1a1"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">
    <RelativeLayout
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/customToolbar"
            android:background="@color/colorBG"
            android:paddingTop="@dimen/toolbar_padding_8"
            android:paddingBottom="@dimen/toolbar_padding_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
            <LinearLayout
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:orientation="horizontal"
                android:id="@+id/yudaya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_gravity="center_vertical"
                    android:id="@+id/ivBack"
                    android:background="@color/colorTransparent"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_arrow_theme"
                    android:scaleType="fitCenter"
                    android:layout_centerVertical="true"
                    android:paddingStart="16dp"
                    android:layout_alignParentStart="true"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                    <TextView
                        android:ellipsize="end"
                        android:layout_gravity="center"
                        android:id="@+id/tv_toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hotel"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        style="@style/TextStyles.Label.Large.w3"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </LinearLayout>

        </RelativeLayout>
        <View
            android:id="@+id/view15"
            android:background="@color/colorDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/customToolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customToolbar"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view15">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:background="@color/colorBG"
                android:descendantFocusability="blocksDescendants"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customToolbar">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="vertical"
                    android:id="@+id/layout_destination_edit"
                    android:padding="@dimen/padding_16"
                    android:focusable="true"
                    android:clickable="true"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/city_area_property_name"
                        android:drawablePadding="@dimen/drawable_padding"
                        android:drawableStart="@drawable/ic_location_pin"
                        app:textAllCaps="true"
                        style="@style/H4TextAppearance"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_from_city_edit"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Saisir une destination"
                        style="@style/TextStyles.Label.Large.w2"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_from_airport"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Burundi"
                        style="@style/H5TextAppearance"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <View
                    android:background="@color/colorDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:id="@+id/layout_check_in_date_edit"
                        android:padding="@dimen/padding_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_in"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:drawableStart="@drawable/ic_calendar"
                            app:textAllCaps="true"
                            style="@style/H4TextAppearance"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_check_in_date_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="24 Fevrier"
                                android:textColor="@color/black"
                                style="@style/TextStyles.Label.Large.w2"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_check_in_day_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Lundi"
                                style="@style/H5TextAppearance"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:id="@+id/layout_check_out_date_edit"
                        android:padding="@dimen/padding_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/check_out"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:drawableStart="@drawable/ic_calendar"
                            app:textAllCaps="true"
                            style="@style/H4TextAppearance"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:id="@+id/llc_checkout_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_checkout_date_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="25 Fevrier"
                                android:textColor="@color/black"
                                style="@style/TextStyles.Label.Large.w2"/>
                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_checkout_day_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Mardi"
                                style="@style/H5TextAppearance"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <View
                    android:background="@color/colorDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/Llc_guest"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:orientation="vertical"
                        android:id="@+id/layout_guest_edit"
                        android:padding="@dimen/padding_16"
                        android:focusable="true"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/guests"
                            android:textColor="@color/black"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:drawableStart="@drawable/ic_user"
                            app:textAllCaps="true"
                            style="@style/H4TextAppearance"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_no_of_guest_edit"
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="1 Voyageur"
                                style="@style/TextStyles.Label.Large.w2"/>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:id="@+id/layout_room"
                        android:padding="@dimen/padding_16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:fontFamily="@font/gilroy_semi_bold">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rooms"
                            android:drawablePadding="@dimen/drawable_padding"
                            android:drawableStart="@drawable/ic_user"
                            app:textAllCaps="true"
                            style="@style/H4TextAppearance"/>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_number_of_room"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="1 Chambre"
                            style="@style/TextStyles.Label.Large.w2"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <View
                    android:background="@color/colorDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/rumata"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDoneEdit"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="32dp"
                        android:text="@string/done"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/padding_16"
                        android:layout_marginEnd="@dimen/padding_16"
                        style="@style/PrimaryButtonStyle"/>



                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>