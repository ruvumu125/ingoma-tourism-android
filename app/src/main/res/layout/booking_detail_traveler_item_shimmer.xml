<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_16"
    android:focusable="true"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:id="@+id/traveler_text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="13sp"
            android:textColor="@color/colorGray"
            android:layout_gravity="start"
            android:id="@+id/tv_passenger_number"
            android:background="@drawable/shimmer_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Traveler 1"
            android:lineSpacingExtra="2.23sp"
            android:letterSpacing="-0.0026"
            style="@style/H2BoldTextAppearance"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="10sp"
            android:textColor="@color/colorLightGray"
            android:layout_gravity="start"
            android:background="@drawable/shimmer_light_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Name"
            android:lineSpacingExtra="2sp"
            android:layout_marginEnd="5dp"
            android:letterSpacing="-0.001"
            style="@style/H2AvenirRegular"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/traveler_text_layout">
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="13sp"
            android:textColor="@color/colorLightGray"
            android:id="@+id/tv_passenger_name"
            android:background="@drawable/shimmer_light_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Md.Imran Molla"
            android:lineSpacingExtra="4.76sp"
            android:layout_marginEnd="4dp"
            android:letterSpacing="-0.001"
            style="@style/H2Avenir"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="@color/colorGray"
            android:id="@+id/tv_passenger_type"
            android:background="@drawable/shimmer_bg"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adult"
            android:layout_marginStart="4dp"
            app:fontFamily="@font/gilroy_bold"
            style="@style/H5MediumTextAppearance"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>
