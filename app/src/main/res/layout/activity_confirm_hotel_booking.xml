<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tools2="http://schemas.android.com/tools"
    android:tag="layout/activity_h_detail_0"
    android:id="@+id/cordinatorLyt"
    android:background="#f4f4f4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- debut toolbar-->
        <com.google.android.material.appbar.AppBarLayout
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:orientation="vertical"
            android:id="@+id/htab_appbar"
            android:background="@color/toolbarBG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="6dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/lytCollapsing"
                android:tag="binding_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="enterAlways">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:tag="layout/view_h_toolbar_0"
                    android:background="@color/toolbarBG"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/htl_dtl_toolbar_height"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:contentInsetStartWithNavigation="0dp">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/lytParentToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:id="@+id/back_press"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:textColor="@color/homeTitleColor"
                                android:id="@+id/back_press_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:srcCompat="@drawable/ic_back_arrow_theme"/>
                        </FrameLayout>
                        <TextView
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:id="@+id/toolbar_custom_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Booking review"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toTopOf="@+id/lytSubtitleWrap"
                            app:layout_constraintEnd_toStartOf="@+id/right_barrier"
                            app:layout_constraintStart_toEndOf="@+id/back_press"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_chainStyle="packed"
                            style="@style/TextStyles.Label.Large.w3"/>
                        <LinearLayout
                            android:id="@+id/lytSubtitleWrap"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/toolbar_custom_title"
                            app:layout_constraintTop_toBottomOf="@+id/toolbar_custom_title">
                            <TextView
                                android:textColor="@color/toolbarCustomSubTitleColor"
                                android:ellipsize="end"
                                android:id="@+id/toolbar_custom_sub_title"
                                android:layout_width="0dp"
                                android:text="@string/amenities"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:layout_weight="1"
                                style="@style/TextStyles.Label.Small.w1"/>
                            <TextView
                                android:visibility="gone"
                                android:textColor="@color/editTextColorDetail"
                                android:id="@+id/lytEdit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:paddingHorizontal="4dp"
                                style="@style/TextStyles.Label.Small.w1"/>
                        </LinearLayout>
                        <androidx.constraintlayout.widget.Barrier
                            android:id="@+id/right_barrier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:constraint_referenced_ids="imgShare, lytCart"
                            tools2:ignore="MissingConstraints" />
                        <ImageView
                            android:id="@+id/imgShare"
                            android:focusable="true"
                            android:visibility="gone"
                            android:clickable="true"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_share_button"
                            app:tint="@color/go_blue"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/lytCart"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:visibility="gone"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_marginRight="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:id="@+id/ivCart"
                                android:layout_width="19dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_htl_cart"
                                app:tint="@color/toolbarCustomTitleColor"/>
                            <TextView
                                android:textColor="@color/go_blue"
                                android:gravity="center"
                                android:id="@+id/tvCartItemCount"
                                android:background="@drawable/white_circle_border_blue"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginBottom="9dp"
                                app:layout_constraintBottom_toBottomOf="@+id/ivCart"
                                app:layout_constraintLeft_toLeftOf="@+id/ivCart"
                                style="@style/TextStyles.Label.Small.w1"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <!--fin toolbar-->

        <!--content-->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/lytShimmerScrollV"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/htab_appbar"
            app:layout_constraintBottom_toTopOf="@id/filter_lyt">

            <!--debut hotel infos-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/combo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <!-- Room PropertyImage and Details Layout -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <!-- Room PropertyImage -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="@dimen/htl_property_card_image_width1"
                                    android:layout_height="@dimen/htl_property_card_image_width1"
                                    android:layout_marginEnd="16dp"
                                    app:cardCornerRadius="@dimen/radius_small"
                                    app:cardBackgroundColor="@android:color/white">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/propertyImageView"
                                            android:layout_width="@dimen/htl_property_card_image_height"
                                            android:layout_height="@dimen/htl_property_card_image_height"
                                            android:layout_marginBottom="20dp"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/bbbb"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"/>
                                    </androidx.constraintlayout.widget.ConstraintLayout>


                                </androidx.cardview.widget.CardView>

                                <!-- Room Details (Guest Count, Bed Type, Room Surface) -->
                                <LinearLayout
                                    android:translationY="0dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <!-- Number of Guests -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:paddingBottom="8dp">

                                        <LinearLayout
                                            android:paddingLeft="3dp"
                                            android:paddingTop="2dp"
                                            android:paddingRight="5dp"
                                            android:paddingBottom="2dp"
                                            android:id="@+id/property_type"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_srp_tag">
                                            <TextView
                                                android:textColor="#717171"
                                                android:gravity="center"
                                                android:text="@string/app_name"
                                                android:id="@+id/tv_property_type"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="2dp"
                                                style="@style/TextStyles.Label.Small.w1"/>
                                        </LinearLayout>

                                    </LinearLayout>

                                    <!-- Bed Type -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:paddingBottom="8dp">

                                        <TextView
                                            android:textColor="#222222"
                                            android:ellipsize="end"
                                            android:gravity="top|left|center_vertical|center_horizontal|center|start"
                                            android:id="@+id/tvPropertyName"
                                            android:text="@string/amenities"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:maxLines="2"
                                            android:includeFontPadding="false"
                                            style="@style/TextStyles.Label.Medium.w3"/>
                                    </LinearLayout>

                                    <!-- Room Surface -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:paddingBottom="8dp">

                                        <TextView
                                            android:textColor="#717171"
                                            android:ellipsize="end"
                                            android:gravity="top|left|center_vertical|center_horizontal|center|start"
                                            android:id="@+id/tvPropertyAddress"
                                            android:text="Bujumbura , Burundi,Gitega, Dimanche"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:maxLines="2"
                                            android:includeFontPadding="false"
                                            style="@style/TextStyles.Label.Base.w1"/>
                                    </LinearLayout>

                                    <!-- Room Details -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical">

                                        <TextView
                                            android:textColor="@color/black"
                                            android:gravity="center_horizontal"
                                            android:id="@+id/rating"
                                            android:text="3/5"
                                            android:background="@drawable/hotel_average_rating_bg"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:includeFontPadding="false"
                                            android:paddingHorizontal="4dp"
                                            style="@style/TextStyles.Label.Small.w1"/>

                                        <TextView
                                            android:id="@+id/tv_guest_count"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="25 Ratings"
                                            android:paddingStart="8dp"
                                            android:gravity="center"
                                            style="@style/TextStyles.Label.Small.w1"
                                            />

                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:id="@+id/divider1"
                                android:background="#e4e4e4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/barrier2"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/lytDateTimeView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/divider1">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="#222222"
                                        android:id="@+id/txtStartDate"
                                        android:text="12/02/2025"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        style="@style/TextStyles.Label.Base.w3"/>
                                    <TextView
                                        android:textColor="#222222"
                                        android:id="@+id/txtEndDate"
                                        android:text="16/02/2025"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        style="@style/TextStyles.Label.Base.w3"/>
                                    <TextView
                                        android:textColor="#717171"
                                        android:id="@+id/txtNight"
                                        android:text="2 nights"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="8dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/txtStartDate"
                                        app:layout_constraintEnd_toStartOf="@+id/vDashedLine2"
                                        app:layout_constraintStart_toEndOf="@+id/vDashedLine1"
                                        app:layout_constraintTop_toTopOf="@+id/txtStartDate"
                                        style="@style/TextStyles.Label.Small.w1"/>
                                    <View
                                        android:id="@+id/vDashedLine1"
                                        android:background="@drawable/htl_dashed_line2"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"
                                        android:layout_marginStart="8dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/txtStartDate"
                                        app:layout_constraintEnd_toStartOf="@+id/txtNight"
                                        app:layout_constraintStart_toEndOf="@+id/txtStartDate"
                                        app:layout_constraintTop_toTopOf="@+id/txtStartDate"/>
                                    <View
                                        android:id="@+id/vDashedLine2"
                                        android:background="@drawable/htl_dashed_line2"
                                        android:layout_width="0dp"
                                        android:layout_height="2dp"
                                        android:layout_marginEnd="8dp"
                                        app:layout_constraintBottom_toBottomOf="@+id/txtEndDate"
                                        app:layout_constraintEnd_toStartOf="@+id/txtEndDate"
                                        app:layout_constraintStart_toEndOf="@+id/txtNight"
                                        app:layout_constraintTop_toTopOf="@+id/txtEndDate"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>

                            <View
                                android:id="@+id/divider2"
                                android:background="#e4e4e4"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/lytDateTimeView"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:id="@+id/lytRoom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:layout_constraintTop_toBottomOf="@+id/divider2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <!-- Room PropertyImage -->
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_marginEnd="16dp"
                                        app:cardCornerRadius="@dimen/radius_small"
                                        app:cardBackgroundColor="@android:color/white">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:id="@+id/roomImageView"
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:layout_marginBottom="20dp"
                                                android:scaleType="centerCrop"
                                                android:src="@drawable/bbbb"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"/>
                                        </androidx.constraintlayout.widget.ConstraintLayout>
                                    </androidx.cardview.widget.CardView>

                                    <LinearLayout
                                        android:translationY="0dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical">

                                            <TextView
                                                android:textColor="#222222"
                                                android:text="@string/amenities"
                                                android:id="@+id/tvRooName"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                style="@style/TextStyles.Label.Base.w3"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:paddingTop="2dp"
                                            android:paddingBottom="2dp">

                                            <TextView
                                                android:text="@string/check_now"
                                                android:id="@+id/tvPlanName"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
                                                app:layout_constraintHorizontal_bias="0"
                                                app:layout_constraintStart_toEndOf="@+id/imgView"
                                                style="@style/TextStyles.Label.Base.w1"/>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:visibility="visible"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:gravity="center_vertical"
                                            android:paddingBottom="8dp">

                                            <TextView
                                                android:text="kkk"
                                                android:id="@+id/tvPlanDescription"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                style="@style/TextStyles.Label.Base.w1"
                                                />
                                        </LinearLayout>

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/white_round_rect_8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textColor="#222222"
                                    android:id="@+id/tvRatingo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="15dp"
                                    android:maxLines="3"
                                    android:text="@string/amenities"
                                    style="@style/TextStyles.Label.Medium.w3"/>

                                <View
                                    android:layout_below="@+id/tvRatingo"
                                    android:id="@+id/separatorSection"
                                    android:background="#eff3f8"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                                <LinearLayout
                                    android:padding="13dp"
                                    android:orientation="vertical"
                                    android:layout_below="@+id/separatorSection"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/recyclerPolicies"
                                        android:paddingBottom="14dp"
                                        android:scrollbars="none"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:nestedScrollingEnabled="false"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/tvRating"/>

                                    <TextView
                                        android:textColor="#2276e3"
                                        android:id="@+id/view_all_amenities"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:text="View All Amenities"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/rvAmenities"
                                        style="@style/TextStyles.Label.Base.w3"/>

                                </LinearLayout>

                            </RelativeLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/jjj"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            layout="@layout/view_h_review_hotel_rules" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="40dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/uuu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            layout="@layout/view_h_review_traveller_detail" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!--fin hotel infos-->

        </androidx.core.widget.NestedScrollView>
        <!--content-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filter_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/detailFooterView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/lytParentFooter"
                        android:tag="layout/lyt_h_detail_footer_0"
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/lytInStock"
                            android:background="@drawable/white_rect_shadow"
                            android:paddingLeft="10dp"
                            android:paddingRight="6dp"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingVertical="7dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/detail_price_offer_lyt"
                                android:visibility="visible"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:foreground="?attr/selectableItemBackground"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
